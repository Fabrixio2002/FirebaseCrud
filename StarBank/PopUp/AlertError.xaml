<?xml version="1.0" encoding="utf-8" ?>
<popup:BasePopupPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:popup="clr-namespace:MauiPopup.Views;assembly=MauiPopup"
             x:Class="StarBank.PopUp.AlertError"
             Title="AlertError">
    
    <!-- POPUP DE ERROR -->
    <StackLayout BackgroundColor="White" Spacing="20" Padding="15" WidthRequest="280">

        <Label Text="Error" VerticalOptions="Center" HorizontalOptions="Center" FontSize="20" FontAttributes="Bold" Margin="10,0" FontFamily="Mplus 1p"/>

        <Image Source="alertaerror.png" WidthRequest="150" HeightRequest="150"/>

        <Label Text="El proceso no se pudo realizar" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" HorizontalTextAlignment="Center"/>

        <Button Text="Cerrar" Clicked="Button_Clicked4" TextColor="White" WidthRequest="160" HeightRequest="40"
        FontSize="14" FontFamily="Mplus 1p" FontAttributes="Bold" BackgroundColor="#2F7142" 
        Margin="0,15,0,0" HorizontalOptions="Center" VerticalOptions="Center"/>
    </StackLayout>
</popup:BasePopupPage>